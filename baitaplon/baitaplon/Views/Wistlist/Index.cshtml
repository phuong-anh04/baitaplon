@{
    ViewData["Title"] = "Wish List";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="@Url.Content("~/Ogani/img/breadcrumb.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Wishlist</h2>
                    <div class="breadcrumb__option">
                        <a asp-action="Index" asp-controller="Home">Home</a>
                        <span>Wishlist</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Actions</th>
                               
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Wishlists)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="~/Uploads/products/@item.Product.Image" alt="@item.Product.Name" width="100px" height="80px">
                                        <h5>@item.Product.Name</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        $@item.Product.Price
                                    </td>
                                    <td>
                                        <!-- Nút Add to Cart -->
                                        <form id="addToCartForm-@item.Product.Pid">
                                            <input type="hidden" name="productId" value="@item.Product.Pid" />
                                            <button type="button" class="btn btn-primary addToCartBtn" data-product-id="@item.Product.Pid">
                                                Add to Cart
                                            </button>
                                        </form>
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <span class="icon_close"></span>
                                    </td>
                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-controller="Home" asp-action="Index" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    
                </div>
            </div>
            <div class="col-lg-6">
            </div>
             @* <div class="col-lg-6">
                 <div class="shoping__checkout">
                     <h5>Cart Total</h5>
                     <ul>
                         <li>Subtotal <span id="subtotal-amount">@ViewBag.TotalAmount.ToString("C")</span></li>
                         <li>Total <span id="total-amount">@ViewBag.TotalAmount.ToString("C")</span></li>
                     </ul>
                     <a href="/check" class="primary-btn">PROCEED TO CHECKOUT</a>
                 </div>
             </div> *@
        </div>
    </div>
</section>


